---
import { Image, Picture } from "astro:assets";
import botImage from "../assets/bot1.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-5 place-items-center relative">
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-indigo-200 right-0 top-0">
      </div>
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-purple-200 right-56 top-10">
      </div>

      <div class="max-w-sm md:max-w-max lg:col-span-2">
        <h1
          class="text-3x1 lg:text-4x1 xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start px-55" >
          Trading Bot for Virtuals and Friendtech
        </h1>
        <p
          class="text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start">
          Alert Friend started on Friendtech and now brings its expertise to Virtual Agents. Using IP from the Nakamigos Collection, it offers insights to enhance your trading decisions.
          <br><br>You can also call him 'Fred'.<br> Fred is 100% customizable by you.
        </p>
        <div
          class="mt-6 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-3">
          <Link
            href="https://t.me/alertfriendbot"
            target="_blank"
            class="flex gap-1 items-center justify-center"
            rel="noopener">
            Add Bot
          </Link>
          <Link
            size="lg"
            style="outline"
            rel="noopener"
            href="https://t.me/alertfriendbot"
            class="flex gap-1 items-center justify-center"
            target="_blank">
            Free Version
          </Link>
        </div>
      </div>
      <div class="py-10 lg:col-span-3 lg:-mr-44">
        <Picture
          src={botImage}
          alt="AlertFriend Notify"
          formats={["avif", "webp"]}
          sizes="(max-width: 1024px) 100vw, 50vw"
          widths={[240, 540, 720, botImage.width]}
          loading="eager"
          fetchpriority="high"
        />
      </div>
    </main>
  </Container>
</div>
